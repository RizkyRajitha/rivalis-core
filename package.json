{
  "name": "@rivalis/core",
  "version": "0.0.2",
  "description": "Rivalis, scalable & scriptable multiplayer game logic framework",
  "main": "lib/index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run test && nodemon -w src -w example --exec babel-node --inspect example/index.js",
    "prepublishOnly": "npm run test && npm run prepublish:build && npm run prepublish:typeGen",
    "prepublish:build": "npx rmdir-cli lib && babel src --out-dir lib",
    "prepublish:typeGen": "npx typescript -d --allowJs --emitDeclarationOnly --outDir ./lib src/*.js",
    "test": "npm run test:linter && npm run test:unit",
    "test:linter": "eslint src",
    "test:unit": "mocha --require @babel/register"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kalevski/rivalis-core.git"
  },
  "keywords": [
    "rivalis",
    "game",
    "multiplayer",
    "server"
  ],
  "author": "Daniel Kalevski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kalevski/rivalis-core/issues"
  },
  "homepage": "https://github.com/kalevski/rivalis-core#readme",
  "devDependencies": {
    "@babel/cli": "^7.12.10",
    "@babel/core": "^7.12.10",
    "@babel/eslint-parser": "^7.12.1",
    "@babel/node": "^7.12.10",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.10",
    "@babel/register": "^7.12.10",
    "@types/node": "^14.14.12",
    "chai": "^4.2.0",
    "eslint": "^7.15.0",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.6",
    "sinon": "^9.2.1"
  },
  "dependencies": {
    "eventemitter3": "^4.0.7",
    "md5": "^2.3.0",
    "signals": "^1.0.0",
    "uuid": "^8.3.2"
  }
}
