{
  "name": "@rivalis/core",
  "version": "0.2.1",
  "description": "Rivalis, scalable & scriptable multiplayer game logic framework",
  "main": "lib/index.js",
  "scripts": {
    "start": "npm run dev",
    "dev": "npm run test && npm run run:server",
    "build": "npm run build:src && npm run build:tsd",
    "test": "npm run test:linter && npm run test:unit",
    "prepublishOnly": "npm run build",
    "build:src": "npx rmdir-cli lib && babel src --out-dir lib",
    "build:tsd": "npx typescript -d --allowJs --emitDeclarationOnly --outDir ./lib src/*.js",
    "run:server": "nodemon -w src -w example --ignore example/client/client.js --exec \"babel-node example/server/index.js\"",
    "build:client": "parcel build example/client/index.js --target browser --no-minify --no-source-maps --bundle-node-modules -d example/client --out-file client.js",
    "test:linter": "eslint src",
    "test:unit": "mocha --recursive --require @babel/register"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kalevski/rivalis-core.git"
  },
  "keywords": [
    "rivalis",
    "game",
    "multiplayer",
    "server"
  ],
  "author": "Daniel Kalevski",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kalevski/rivalis-core/issues"
  },
  "homepage": "https://github.com/kalevski/rivalis-core#readme",
  "devDependencies": {
    "@babel/cli": "^7.12.13",
    "@babel/core": "^7.12.13",
    "@babel/eslint-parser": "^7.12.13",
    "@babel/node": "^7.12.13",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/preset-env": "^7.12.13",
    "@babel/register": "^7.12.13",
    "@types/node": "^14.14.25",
    "chai": "^4.3.0",
    "eslint": "^7.19.0",
    "express": "^4.17.1",
    "mocha": "^8.2.1",
    "nodemon": "^2.0.7",
    "parcel": "^1.12.4",
    "phaser": "^3.52.0",
    "sinon": "^9.2.4",
    "ws": "^7.4.3"
  },
  "dependencies": {
    "eventemitter3": "^4.0.7",
    "md5": "^2.3.0",
    "signals": "^1.0.0",
    "uuid": "^8.3.2"
  }
}
